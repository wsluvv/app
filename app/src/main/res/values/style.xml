<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TilesStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="GenreStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

    </style>

    <style name="ColorGenreSelect" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/background_genre_select</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ColorGenreDark" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_genre</item>
    </style>

    <style name="ColorGenreSelectDark" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_genre_select</item>
    </style>

    <style name="FilmItemImage">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="FilmItemText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DescriptionFilm">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="roundedCorners" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>